<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- Button for Guess the Number Game -->
    <Button
        android:id="@+id/btn_guess_game"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Guess the Number" />

    <!-- Button for Image Capture -->
    <Button
        android:id="@+id/btn_image_capture"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Image Capture" />

    <!-- Button for Calculator -->
    <Button
        android:id="@+id/btn_calculator"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Calculator" />

    <!-- Button for Your Chosen Game -->
    <Button
        android:id="@+id/btn_custom_game"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Custom Game" />

</LinearLayout>
